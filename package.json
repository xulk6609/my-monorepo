{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:vue3": "pnpm --filter vue3-app dev",
    "dev:react": "pnpm --filter react-app dev",
    "dev:nuxt": "pnpm --filter nuxt-app dev",
    "build:vue3": "pnpm --filter vue3-app build",
    "build:react": "pnpm --filter react-app build",
    "build:nuxt": "pnpm --filter nuxt-app build"
  },
  "dependencies": {
    "dayjs": "^1.11.18",
    "element-plus": "^2.11.4",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.5.0",
    "prettier": "^3.6.2",
    "unocss": "^66.5.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2"
  }
}